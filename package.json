{
    "name": "dav-express-template",
    "version": "1.0.0",
    "description": "a fully packaged template for node/express/ts/jest",
    "repository": {
        "url": ""
    },
    "scripts": {
        "clean": "rm -rf ./dist && mkdir dist",
        "build": "npm run clean && tsc",
        "start": "npm run build && NODE_PATH=./dist node ./src/bin/www",
        "dev": "NODE_ENV=development NODE_PATH=./src ts-node-dev --poll --inspect -- ./src/bin/www",
        "test:ci": "jest",
        "test": "jest --watch --no-cache"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./src/test/setup.ts"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/cookie-session": "^2.0.41",
        "@types/express": "^4.17.8",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongoose": "^5.7.36",
        "@types/node": "^14.11.5",
        "cookie-session": "^1.4.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "express-validator": "^6.6.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.8",
        "mongoose-update-if-current": "^1.4.0",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "typescript": "^4.0.3"
    },
    "devDependencies": {
        "@types/jest": "^26.0.14",
        "@types/supertest": "^2.0.10",
        "jest": "^26.5.2",
        "mongodb-memory-server": "^6.9.2",
        "prettier": "^2.1.2",
        "supertest": "^5.0.0",
        "ts-jest": "^26.4.1"
    }
}
